generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Donante {
  id        Int      @id @default(autoincrement())
  dni       String   @unique
  nombre    String
  apellido  String
  email     String   @unique
  password  String
  rol       String   // "donante" | "hospital" | "admin"
  createdAt DateTime @default(now())
  isActive Boolean @default(true)
  donaciones Donacion[] // Relación: un donante puede tener muchas donaciones
}

model Hospital {
  id         Int         @id @default(autoincrement())
  nombre     String
  direccion  String
  numero     Int
  telefono   BigInt
  isActive   Boolean     @default(true)
  createdAt  DateTime    @default(now())
  donaciones Donacion[]  // Relación: un hospital puede tener muchas donaciones
}

model Donacion { 
  id         Int      @id @default(autoincrement())
  DonanteId  Int
  HospitalId Int
  donante    Donante  @relation(fields: [DonanteId], references: [id])
  hospital   Hospital @relation(fields: [HospitalId], references: [id])
}

