generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Donante {
  id        Int      @id @default(autoincrement())
  dni       String   @unique
  nombre    String
  apellido  String
  email     String   @unique
  password  String
  rol       String   // "donante" | "hospital" | "admin"
  createdAt DateTime @default(now())
  donaciones Donacion[] // Relaci√≥n: un donante puede tener muchas donaciones
}

model Hospital {
  id Int @id @default(autoincrement())
  nombre String 
  direccion String
  numero Int 
  telefono BigInt
  isActive Boolean @default(true)
  createdAt DateTime @default(now())
}

model Donacion { 
  id Int @id @default(autoincrement())
  DonanteId Int
  donante Donante @relation(fields: [DonanteId], references: [id])
}

