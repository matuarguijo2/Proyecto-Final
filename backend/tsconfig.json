{
  "compilerOptions": {
    /* Salida del compilador */
    "target": "ES6",                       
    "module": "CommonJS",                  
    "rootDir": "./src",                    
    "outDir": "./dist",                    
    
    /* Configuraci√≥n de imports */
    "esModuleInterop": true,               
    "allowSyntheticDefaultImports": true,  
    
    /* Seguridad y chequeos */
    "strict": true,                        
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true                   
  }
}

